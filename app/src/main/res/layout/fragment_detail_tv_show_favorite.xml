<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:scrollbars="none"
    android:overScrollMode="never"
    tools:context=".ui.detail.tvshow.fragment.DetailTvShowFavoriteFragment">

    <include
        android:id="@+id/toolbarDetailTvShowFavorite"
        layout="@layout/toolbar_detail_general"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarDetailTvShowFavorite"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/imgBackdropFavorite"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@color/colorPrimaryDark"
                android:contentDescription="@null"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPosterFavorite"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginTop="140dp"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="@id/imgBackdropFavorite"
                app:layout_constraintStart_toStartOf="@id/imgBackdropFavorite">

                <ImageView
                    android:id="@+id/imgPosterFavorite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/ic_loading"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTitleFavorite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/imgBackdropFavorite"
                app:layout_constraintStart_toEndOf="@id/cardPosterFavorite"
                app:layout_constraintEnd_toEndOf="@id/tvOverviewFavorite"
                tools:text="@string/tvTitle"/>

            <TextView
                android:id="@+id/tvNetworkFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorOrange"
                app:layout_constraintStart_toStartOf="@id/tvTitleFavorite"
                app:layout_constraintTop_toBottomOf="@id/tvTitleFavorite"
                tools:text="@string/tvNetwork"/>

            <TextView
                android:id="@+id/tvReleasedOnFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:text="@string/tvStartedOn"
                app:layout_constraintStart_toStartOf="@id/tvNetworkFavorite"
                app:layout_constraintTop_toBottomOf="@id/tvNetworkFavorite"/>

            <TextView
                android:id="@+id/tvReleaseDateFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorGrey"
                app:layout_constraintStart_toEndOf="@id/tvReleasedOnFavorite"
                app:layout_constraintTop_toTopOf="@id/tvReleasedOnFavorite"
                app:layout_constraintBottom_toBottomOf="@+id/tvReleasedOnFavorite"
                tools:text="@string/tvReleaseDate"/>

            <TextView
                android:id="@+id/tvStatusFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_green_light"
                app:layout_constraintStart_toStartOf="@id/tvTitleFavorite"
                app:layout_constraintTop_toBottomOf="@id/tvReleaseDateFavorite"
                tools:text="@string/tvStatus"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".35"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".7"/>

            <TextView
                android:id="@+id/tvRatingTitleFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorTextOther"
                android:textStyle="bold"
                android:text="@string/tvRating"
                app:layout_constraintTop_toBottomOf="@id/cardPosterFavorite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline1"/>

            <TextView
                android:id="@+id/tvRatingFavorite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/colorTextIcons"
                android:gravity="center"
                tools:text="@string/tvRating"
                app:layout_constraintTop_toBottomOf="@id/tvRatingTitleFavorite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline1"/>

            <TextView
                android:id="@+id/tvGenreTitleFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextOther"
                android:textStyle="bold"
                android:text="@string/tvGenre"
                app:layout_constraintTop_toTopOf="@id/tvRatingTitleFavorite"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2"/>

            <TextView
                android:id="@+id/tvGenreFavorite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:gravity="center"
                android:textColor="@color/colorTextIcons"
                tools:text="@string/tvGenre"
                app:layout_constraintTop_toBottomOf="@id/tvGenreTitleFavorite"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/guideline2" />

            <TextView
                android:id="@+id/tvEpisodesTitleFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextOther"
                android:textStyle="bold"
                android:text="@string/tvEpisodes"
                app:layout_constraintTop_toTopOf="@id/tvRatingTitleFavorite"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvEpisodesFavorite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:gravity="center"
                android:textColor="@color/colorTextIcons"
                tools:text="@string/tvEpisodes"
                app:layout_constraintTop_toBottomOf="@id/tvEpisodesTitleFavorite"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvOverviewTitleFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:includeFontPadding="false"
                android:text="@string/tvOverview"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorOrange"
                app:layout_constraintStart_toStartOf="@id/cardPosterFavorite"
                app:layout_constraintTop_toBottomOf="@id/tvEpisodesFavorite"/>

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/tvOverviewFavorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:maxLines="4"
                app:layout_constraintTop_toBottomOf="@id/tvOverviewTitleFavorite"
                app:layout_constraintStart_toStartOf="@id/cardPosterFavorite"
                tools:text="@string/tvLoremIpsum"/>

            <TextView
                android:id="@+id/tvReadMoreFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:includeFontPadding="false"
                android:visibility="gone"
                android:text="@string/tvReadMore"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryAccent"
                app:layout_constraintStart_toStartOf="@id/cardPosterFavorite"
                app:layout_constraintTop_toBottomOf="@id/tvOverviewFavorite"/>

            <TextView
                android:id="@+id/tvCastFavorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:includeFontPadding="false"
                android:text="@string/tvCast"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorOrange"
                app:layout_constraintStart_toStartOf="@id/cardPosterFavorite"
                app:layout_constraintEnd_toEndOf="@id/tvOverviewFavorite"
                app:layout_constraintTop_toBottomOf="@id/tvReadMoreFavorite"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTvShowCastFavorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:scrollbars="none"
                tools:listitem="@layout/item_cast"
                tools:itemCount="1"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tvCastFavorite"/>

            <TextView
                android:id="@+id/tvTrailerFavorite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:includeFontPadding="false"
                android:textColor="@color/colorOrange"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="4"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="@id/cardPosterFavorite"
                app:layout_constraintEnd_toEndOf="@id/tvOverviewFavorite"
                app:layout_constraintTop_toBottomOf="@id/rvTvShowCastFavorite"
                tools:text="@string/tvTrailer"/>

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/videoTrailer"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="16dp"
                app:autoPlay="false"
                app:showFullScreenButton="false"
                app:layout_constraintTop_toBottomOf="@id/tvTrailerFavorite"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
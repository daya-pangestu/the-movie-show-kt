<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.favorite.fragment.FavoriteMovieFragment">

    <com.taufik.themovieshow.utils.CustomEditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:paddingHorizontal="6dp"
        android:background="@drawable/bg_search_favorite"
        android:hint="@string/tvSearch"
        android:textColorHint="@color/colorGrey"
        android:textColor="@color/colorOrange"
        android:inputType="text"
        android:importantForAutofill="auto"
        android:imeOptions="actionSearch"
        android:autofillHints="Search..."
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgSortFiltering"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSortFiltering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/baseline_filter_list"
        android:contentDescription="@string/tvSortFilter"
        app:layout_constraintTop_toTopOf="@id/etSearch"
        app:layout_constraintBottom_toBottomOf="@id/etSearch"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupSortFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:constraint_referenced_ids="tvSortFilter, flSortFiltering" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSortFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/tvSortFilter"
        android:textColor="@color/colorOrange"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etSearch"
        app:layout_constraintStart_toStartOf="@id/etSearch"
        app:layout_constraintEnd_toEndOf="@id/imgSortFiltering"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flSortFiltering"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSortFilter"
        app:layout_constraintStart_toStartOf="@id/etSearch"
        app:layout_constraintEnd_toEndOf="@id/imgSortFiltering">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSortFiltering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/item_sort_filter"
            tools:itemCount="5"/>

    </com.google.android.flexbox.FlexboxLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDiscoverFavoriteMovies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/items_movies_tv_show"
        app:layout_constraintTop_toBottomOf="@id/flSortFiltering"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <include
        android:id="@+id/layoutNoFavorite"
        layout="@layout/layout_error"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taufik.themovieshow">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheMovieShow">
        <activity
            android:name="com.taufik.themovieshow.ui.main.activity.MainActivity"
            android:theme="@style/TheMovieShowDarkActivityTheme"/>
        <activity
            android:name="com.taufik.themovieshow.ui.detail.activity.DetailActivity"
            android:theme="@style/TheMovieShowDarkActivityTheme"/>
        <activity android:name="com.taufik.themovieshow.ui.splashscreen.SplashscreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>